<div class="container" style="margin"50px auto>
    <div class="row">
        <div class="col-6 offset-3">
            {{#if error}}
                <h5>{{message}}</h5>
            {{/if}}
            <h4>Modificar Novedad</h4>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad2.id}}" name="id">
                <div class="mb-3">
                    <input type="text" placeholder="Titulo" value="{{novedad2.title}}" class="form-control" name="title">
                </div>
                <div class="mb-3">
                    <textarea placeholder="Cuerpo" class="form-control" name="content">{{novedad2.content}}</textarea>
                </div>
                <div class="mb-3">
                    <p>
                        <label>Imagen: <input type="file" name="imagen" id="imagen"></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1"> Eliminar imagen
                            actual?</label>
                        <input type="hidden" name="img_original" value="{{novedad2.image_id2}}">
                    </p>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
        </div>
    </div>
</div>